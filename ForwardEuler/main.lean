  (v : â„ â†’ E â†’ E) (h : â„) (h_pos : 0 < h) (t0 : â„) (y0 : E) (n : â„•)
  (t : â„) (ht : t âˆˆ Set.Ico (t0 + n * h) (t0 + (n + 1) * h)) :
  eulerPath v h t0 y0 t = eulerPoint v h t0 y0 n + (t - (t0 + n * h)) â€¢ v (t0 + n * h) (eulerPoint v h t0 y0 n) := by
    simp [eulerPath, floor_eq_of_mem_Ico h_pos t0 n t ht]

/-
