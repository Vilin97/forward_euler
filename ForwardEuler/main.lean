  (v : ‚Ñù ‚Üí E ‚Üí E) (h : ‚Ñù) (h_pos : 0 < h) (t0 : ‚Ñù) (y0 : E) (T : ‚Ñù)
  (K L : NNReal) (M : ‚Ñù)
  (hv : ‚àÄ t, LipschitzWith K (v t))
  (hv_t : ‚àÄ y, LipschitzWith L (fun t => v t y))
  (v_bound : ‚àÄ t y, ‚Äñv t y‚Äñ ‚â§ M)
  (sol : ‚Ñù ‚Üí E)
